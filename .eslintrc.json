{
  "env": {
    "node": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "comma-dangle": "off",
    "consistent-return": "off",
    "max-len": ["warn", { "code": 120 }],
    "no-await-in-loop": "off",
    "no-console": "off",
    "no-cond-assign": "off",
    "no-continue": "off",
    "no-multiple-empty-lines": "off",
    "no-plusplus": "off",
    "no-restricted-syntax": "off",
    "no-use-before-define": "off",
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "padded-blocks": "off"
  }
}
